{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

<br />
<div>
    <div class="card" style="width:35%">
        <div class="card-header text-center">
            <h3>Comenzar pesaje</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center">
                <form action="/inicio-pesaje" method="POST">
                    <b>Rellene uno de los dos siguientes campos:</b>
                    <div class="form-group" style="padding-top: 5px;">
                        <input type="text" name="id_tanda" placeholder="Numero de tanda" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="id_personalizada" placeholder="Id de tanda" class="form-control" />
                    </div>
                    <br />
                    <div class="input-group" style="text-align:center center">
                        <label style="padding-right: 10px;"><b>Codigo de semiterminado:</b></label>
                        <select type="text" name="codigo_semiterminado">
                            <option>--</option>
                            {{#each productos}}
                                <option value="{{codigo_producto}}">{{codigo_producto}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <br />
                    <div class="form-group">
                        <button class="btn btn-success btn-lg btn-block" type="submit">
                            Comenzar
                        </button>
                    </div>
                </form>
            </div>
            <hr />
            <div class="d-flex justify-content-center">
                <form action="/" method="GET">
                    <button class="btn btn-danger btn-lg" type="submit">
                        Atras
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<br />