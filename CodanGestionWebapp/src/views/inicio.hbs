{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
</div>
{{/each}}

<br />
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header text-center">
            <h3>Comenzar Produccion</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center">
                <form action="/inicio" method="POST">
                    <div class="form-group">
                        <input type="text" name="jefe" class="form-control" placeholder="Jefe de equipo" autofocus maxlength="50" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="linea" class="form-control" placeholder="Linea" maxlength="16" />
                    </div>
                    <div class="input-group" style="text-align:center center; padding-bottom: 15px;">
                        <label style="padding-right: 10px;"><b>Producto:</b></label>
                        <select type="text" name="producto">
                            <option>--</option>
                            {{#each productos}}
                                <option value="{{codigo_producto}}">{{codigo_producto}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" name="id_personalizada" class="form-control" placeholder="Id (opcional)" maxlength="40" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block" type="submit">
                            Iniciar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>